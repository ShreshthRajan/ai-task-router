# .env.example
# AI Task Router Environment Configuration

# GitHub Integration
GITHUB_TOKEN=github_pat_your_token_here

# Database Configuration
DATABASE_URL=sqlite:///./data/taskrouter.db
REDIS_URL=redis://localhost:6379

# API Configuration
DEBUG=True
API_HOST=localhost
API_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# AI Model Configuration
SKILL_VECTOR_DIM=768
LEARNING_RATE=0.1
MIN_SAMPLE_SIZE_FOR_LEARNING=5
CONFIDENCE_THRESHOLD=0.7

# Performance Monitoring
ALERT_ASSIGNMENT_SUCCESS_RATE=0.7
ALERT_DEVELOPER_SATISFACTION=0.6
ALERT_PREDICTION_ACCURACY=0.7
ALERT_SYSTEM_PERFORMANCE=0.75

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1
